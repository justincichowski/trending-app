{
  "name": "trending_app",
  "version": "1.0.0",
  "description": "A vanilla TypeScript single-page app with a Vercel serverless backend.",
  "main": "index.js",
   "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:server": "cd server && tsc-watch --onSuccess \"node dist/index.js\"",
    "dev:client": "npm --prefix client run dev",
    "build": "tsc --project api/tsconfig.json && npm --prefix client run build",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "buildv": "npm --prefix client run build",
    "postinstall": "npm --prefix client ci || npm --prefix client i"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vercel/node": "^5.3.17",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "axios": "^1.11.0",
    "fastify": "^5.5.0",
    "google-auth-library": "^10.3.0",
    "rss-parser": "^3.13.0"
  }
}
