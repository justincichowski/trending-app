{
	"rewrites": [
		{
			"source": "/api/:match*",
			"destination": "/api/:match*.ts"
		},
		{
			"source": "/search(.*)",
			"destination": "/api/presets?id=search$1"
		},
		{
			"source": "/:path*",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/api/(.*)",
			"headers": [
				{ "key": "Access-Control-Allow-Origin", "value": "*" },
				{
					"key": "Access-Control-Allow-Methods",
					"value": "GET, POST, PUT, DELETE, OPTIONS"
				},
				{ "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
			]
		}
	],
	"builds": [
		{
			"src": "api/**/*.ts",
			"use": "@vercel/node"
		},
		{
			"src": "client/dist/**/*",
			"use": "@vercel/static"
		}
	]
}
