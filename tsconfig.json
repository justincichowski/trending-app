{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "server_local.ts",
    "api/**/*",
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "client/node_modules"
  ]
}